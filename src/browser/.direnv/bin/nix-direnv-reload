#!/usr/bin/env bash
set -e
if [[ ! -d "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser/.envrc" "/tmp/tmp.jG4WMYKC6o/Browser-Phone/src/browser/.direnv"/*.rc
